{
  "name": "lua-3p-language-servers",
  "version": "1.0.2",
  "description": "A collection of 3rd party language servers for selene and stylua",
  "author": "antonk52",
  "license": "MIT",
  "bin": {
    "selene-3p-language-server": "./dist/selene-bin.js",
    "stylua-3p-language-server": "./dist/stylua-bin.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clear": "rm -rf dist",
    "preversion": "npm run clear && npm run build",
    "postversion": "npm publish && git push --follow-tags",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "keywords": [
    "language server",
    "lsp",
    "lua",
    "selene",
    "stylua"
  ],
  "funding": "https://github.com/sponsors/antonk52",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/which": "^3.0.4",
    "typescript": "^5.0.0",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "superstruct": "^2.0.2",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.0.8",
    "which": "^5.0.0"
  }
}
